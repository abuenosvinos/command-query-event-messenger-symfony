{% extends 'base.html.twig' %}

{% block title %}Data: Log Book{% endblock %}

{% block content %}

    <div class="text-gray-600 dark:text-gray-300">
        <div class="max-w-7xl mx-auto px-6 md:px-12 xl:px-6">
            <div class="mb-20 space-y-4 px-6 md:px-0">
                <h2 class="text-center text-2xl font-bold text-gray-800 dark:text-white md:text-4xl">
                    Data: Log Book
                </h2>
            </div>

            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-2">
                {% for item in results.results %}
                    <div class="aspect-auto p-8 border border-gray-100 rounded-3xl bg-white dark:bg-gray-800 dark:border-gray-700 shadow-2xl shadow-gray-600/10 dark:shadow-none">
                        <div class="flex gap-4">
                            <div>
                                <h6 class="text-lg font-medium text-gray-700 dark:text-white">{{ item.id }}</h6>
                            </div>
                        </div>
                        <p class="mt-8">
                            Action: {{ item.action }}<br/>
                            Object: {{ item.objectType }} -> {{ item.objectId }}<br/>
                            Metadata: {{ item.metadata }}<br/>
                            Created: {{ item.occurredOn.format('d/m/Y H:i:s') }}<br/>
                        </p>
                    </div>
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}
